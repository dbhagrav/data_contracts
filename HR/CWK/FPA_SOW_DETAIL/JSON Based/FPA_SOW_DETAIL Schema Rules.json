{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "STATEMENT_OF_WORK_OWNER_EMAIL": { "format": "email" },
    "PO_NUMBER": {
      "anyOf": [
        { "type": "null" },
        { "type": "string" }
      ]
    },
    "ONBOARDING_ONLY": {
      "type": "string"
    },
    "BAN_NUMBER": {
      "anyOf": [
        { "type": "null" },
        { "const": "" },
        {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)$"
        }
      ]
    }
  },
  "if": {
    "properties": {
      "ONBOARDING_ONLY": { "const": "Y" }
    }
  },
  "then": {
    "properties": {
      "PO_NUMBER": { "const": "UNKNOWN" }
    },
    "required": [ "PO_NUMBER", "STATEMENT_OF_WORK_OWNER_EMAIL" ]
  }
}
