{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "STATEMENT_OF_WORK_OWNER_EMAIL": { "format": "email" },
    "PO_NUMBER": {
      "anyOf": [
        {
          "type": [ "null" ]
        },
        {
          "type": "string"
        }
      ]
    },
    "if": {
      "properties": {
        "onboarding_only": { "const": "N" }
      }
    },
    "then": {
      "properties": {
        "PO_NUMBER": { "pattern": "^\\d+$" }
      },
      "required": [ "PO_NUMBER" ]
    },
    "BAN_NUMBER": {
      "anyOf": [
        {
          "type": [ "null" ]
        },
        {
          "const": ""
        },
        {
          "type": "string",
          "pattern": "^\\d+$"
        }
      ]
    }
  }
}